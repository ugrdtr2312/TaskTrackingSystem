<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      autoReload="true"
      internalLogLevel="Trace" internalLogFile="E:/TaskTrackingSystem/API/LogData/InnerLog.txt"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd ">
    <extensions>
        <add assembly="NLog.Extended"/>
    </extensions>

    <targets>
        <target name="logfile"
                fileName="E:/TaskTrackingSystem/API/LogData/${date}_log.txt"
                layout="${longdate} ${level:uppercase=true} ${message}">
            <xsi:type>File</xsi:type>
        </target>
    </targets>

    <rules>
        <logger name="*" minlevel="Debug" writeTo="logfile"/>
    </rules>
</nlog>  